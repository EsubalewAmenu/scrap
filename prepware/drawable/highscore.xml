<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="ring" android:thicknessRatio="26" android:useLevel="false" android:innerRadius="40dp">
            <solid android:color="#ddd"/>
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270" android:toDegrees="270">
            <shape android:shape="ring" android:thicknessRatio="26" android:useLevel="true" android:innerRadius="40dp">
                <gradient android:startColor="#dc0a0a" android:endColor="#1cf825" android:angle="0" android:type="sweep" android:centerColor="#fff200"/>
            </shape>
        </rotate>
    </item>
</layer-list>
